{
    "manifest_version": 2,
    "homepage_url": "http://www.vietnamworks.com",
    "name": "VietnamWorks Smart Job Alert Notification",
    "description": "In order to simplify the process of finding dream job, this extension will look for your dream job.",
    "version": "1.0",

    "browser_action": {
        "default_icon": {
            "19": "/images/icons/icon_19.png",
            "38": "/images/icons/icon_38.png"
        },
        "default_title": "VietnamWorks Smart Job Alert Notification",
        "default_popup": "popup.html"
    },

    "icons" : {
        "16": "/images/icons/icon_16.png",
        "32": "/images/icons/icon_32.png",
        "48": "/images/icons/icon_48.png",
        "64": "/images/icons/icon_64.png",
        "128": "/images/icons/icon_128.png"
    },
    "options_page": "options.html",
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "alarms",
        "http://*/*",
        "https://*/*"
    ],
    "optional_permissions": [ "background"]
}
